{% extends 'default.njk' %}

{% block content %}
    {% for post in pagination.data %}
    <article class="pure-g">
        <div class="pure-u-1-4">
            <a href="{{ site.link }}">
                <time>{{ post.date|date }}</time>
            </a>
        </div>
        <div class="pure-u-3-4">
            <h3>
                <a href="{{ post.path }}">{{ post.title }}</a>
            </h3>

            {{ post.excerpt|default(post.contents)|raw }}

            {% if post.excerpt %}<a href="{{ post.path }}">more</a>{% endif %}

            {% if post.tags %}
            <div class="tags">
                <ul>
                    {% for tag in post.tags %}
                    <li><a href="/tags/{{ tag }}/">#{{ tag }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
        </div>
    </article>
    {% endfor %}

    <div class="pure-g">
        <div class="pure-u-1-4">
        </div>

        <div class="pagination pure-u-3-4">
            {% if pagination.lastPage > 1 %}
                {% if pagination.prevPageUrl %}<a href="{{ pagination.prevPageUrl }}">Previous</a>{% endif %}
                {% if pagination.nextPageUrl %}<a href="{{ pagination.nextPageUrl }}">Next</a>{% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}
