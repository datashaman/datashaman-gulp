<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
<title>{{ site.title }}</title>
<subtitle>{{ site.subtitle }}</subtitle>
<link href="{{ site.link }}{{ data.url }}" rel="self" />
<link href="{{ site.link }}/" />
<id>{{ site.id }}</id>
<updated>{{ updated }}</updated>

{% for id in entries %}
    {% set entry = document(id) %}
    <entry>
        <title>{{ entry.data.title }}</title>
        <link href="{{ entry.data.url }}" />
        <!--<link rel="edit" href="http://example.org/2003/12/13/atom03/edit"/>-->
        <id>urn:uuid:1225c695-cfb8-4ebb-aaaa-80da344efa6a</id>
        <updated>{{ entry.data.date|date('YYYY-MM-DDTHH:mm:ss[Z]') }}</updated>
        {% if entry.data.excerpt %}
            <summary type="xhtml">
                {% markdown %}{{ entry.data.excerpt }}{% endmarkdown %}
            </summary>
        {% endif %}
        <content type="xhtml">
            <div xmlns="http://www.w3.org/1999/xhtml">
                {% markdown %}{{ entry.contents }}{% endmarkdown %}
            </div>
        </content>
        <author>
            <name>{{ author.name }}</name>
            <email>{{ author.email }}</email>
        </author>
    </entry>
{% endfor %}
</feed>
