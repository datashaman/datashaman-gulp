{% extends 'default.njk' %}
{% from 'macros.njk' import render_posts %}

{% set bodyClass = 'h-feed' %}

{% block content %}
    <header class="p-author h-card">
        <aside>
            <p><img class="gravatar u-photo" height="80" width="80" alt="Marlin Forbes" src="{{ author.photo }}"/></p>
        </aside>
        <main class="p-note">
            <p>
                Hi! My name is <a href="{{ site.link }}" rel="me" class="u-url p-name">Marlin Forbes</a>. <br>
                Freelance developer. <br>
                Open-source solutions. <br>
                Wannabe writer.
            </p>
        </main>
    </header>

    {{ render_posts(posts) }}
{% endblock %}
